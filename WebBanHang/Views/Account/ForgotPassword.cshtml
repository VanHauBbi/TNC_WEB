@model WebBanHang.Models.ViewModel.ForgotPasswordVM
@{
    ViewBag.Title = "Quên mật khẩu";
    Layout = null; // Trang độc lập
}
<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewBag.Title - TNCStore</title>
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css">
    <link href="~/Content/myStyle/Login-Register.css" rel="stylesheet" />

    <style>
        .toast-popup {
            position: fixed;
            bottom: 20px;
            right: 20px;
            z-index: 1050;
            min-width: 300px;
            padding: 15px;
            border-radius: 8px;
            box-shadow: 0 4px 15px rgba(0, 0, 0, 0.2);
            opacity: 0;
            transition: opacity 0.3s, transform 0.3s;
            display: none;
        }

            .toast-popup.alert-danger {
                background-color: #f8d7da;
                color: #721c24;
                border-color: #f5c6cb;
            }

            .toast-popup.alert-success {
                background-color: #d4edda;
                color: #155724;
                border-color: #c3e6cb;
            }
    </style>
</head>
<body>
    <div class="auth-page">
        <div class="auth-container">
            <h2>Quên mật khẩu</h2>
            <p style="text-align:center; margin-bottom: 20px;">Nhập thông tin tài khoản của bạn để nhận link reset mật khẩu.</p>

            @using (Html.BeginForm("ForgotPassword", "Account", FormMethod.Post))
            {
                @Html.AntiForgeryToken()

                <div class="form-group">
                    @Html.LabelFor(m => m.UserIdentifier)
                    @Html.TextBoxFor(m => m.UserIdentifier, new { @class = "form-control" })
                    @Html.ValidationMessageFor(m => m.UserIdentifier, "", new { @class = "text-danger" })
                </div>

                <button type="submit" class="btn-submit">Gửi yêu cầu</button>

                <div class="auth-options">
                    <a href="@Url.Action("Login", "Account")">Hủy và quay lại Đăng nhập</a>
                </div>
            }
        </div>
    </div>

    @if (TempData["SuccessMessage"] != null)
    {
        <div id="tempSuccessMessage" class="toast-popup alert alert-success" role="alert">
            <i class="fas fa-check-circle me-2"></i> @TempData["SuccessMessage"]
        </div>
    }
    @if (TempData["ErrorMessage"] != null)
    {
        <div id="tempErrorMessage" class="toast-popup alert alert-danger" role="alert">
            <i class="fas fa-exclamation-triangle me-2"></i> @TempData["ErrorMessage"]
        </div>
    }

    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script>
        $(document).ready(function () {
            const successMessageBox = $('#tempSuccessMessage');
            const errorMessageBox = $('#tempErrorMessage');
            const messageBoxes = successMessageBox.add(errorMessageBox);
            if (messageBoxes.length) {
                messageBoxes.css('display', 'block');
                setTimeout(function () { messageBoxes.css('opacity', '1'); }, 10);
                // Hiển thị thông báo thành công (link) lâu hơn
                var timeout = successMessageBox.length ? 15000 : 6000;
                setTimeout(function () {
                    messageBoxes.css('opacity', '0');
                    setTimeout(function () { messageBoxes.css('display', 'none'); }, 800);
                }, timeout);
            }
        });
    </script>

</body>
</html>