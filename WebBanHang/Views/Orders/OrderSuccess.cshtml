@model WebBanHang.Models.Order
@{
    ViewBag.Title = "Đặt hàng thành công";
    Layout = "~/Views/Shared/_LayoutDivMain.cshtml";
}

<div class="container my-5 text-center">
    <div class="success-box p-5 shadow-lg rounded">
        <i class="fa-solid fa-check-circle text-success" style="font-size: 5rem; color: #28a745;"></i>
        <h2 class="mt-4 text-success">🎉 ĐẶT HÀNG THÀNH CÔNG!</h2>
        <p class="lead">Đơn hàng của bạn đã được ghi nhận. Mã đơn hàng của bạn là:</p>

        <h3 class="text-secondary">Mã đơn hàng: <strong class="text-primary">#TNC_BEE_@(Model.OrderID)</strong></h3>

        <hr class="my-4">

        <div class="row mt-4">
            <div class="col-md-8 mx-auto">
                <ul class="list-group text-start">
                    <li class="list-group-item d-flex justify-content-between">
                        Tổng giá trị (Đã bao gồm ship):
                        <span class="fw-bold text-danger">@Model.TotalAmount.ToString("N0") ₫</span>
                    </li>
                    <li class="list-group-item d-flex justify-content-between">
                        Phương thức thanh toán:
                        <span class="fw-bold">@Model.PaymentMethod</span>
                    </li>
                    <li class="list-group-item d-flex justify-content-between">
                        Địa chỉ giao hàng:
                        <span class="fw-bold">@Model.ShippingAddress</span>
                    </li>
                </ul>
            </div>
        </div>

        <div class="mt-5">
            <a href="@Url.Action("Index", "Home")" class="btn btn-outline-primary btn-lg me-3">
                <i class="fa-solid fa-arrow-left"></i> Về trang chủ
            </a>

            <a href="@Url.Action("Details", "Orders", new { id = Model.OrderID })" class="btn btn-primary btn-lg">
                Xem chi tiết đơn hàng
            </a>
        </div>

    </div>
</div>

<style>
    /* Bạn nên thêm CSS này vào file checkout.css hoặc site.css */
    .success-box {
        max-width: 700px;
        margin: 0 auto;
        background-color: #f9f9f9;
        border: 2px solid #28a745;
    }
</style>