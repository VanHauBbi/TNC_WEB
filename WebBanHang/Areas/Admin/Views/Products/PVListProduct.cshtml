@using PagedList.Mvc
@model PagedList.IPagedList<WebBanHang.Models.Product>

<link href="~/Content/Admin/products_admin.css" rel="stylesheet" />

@if (Model != null && Model.Any())
{
    <table class="table table-bordered table-hover table-admin-data">
        <thead class="table-dark">
            <tr>
                <th style="width: 10%;">Ảnh</th>
                <th style="width: 35%;">Tên sản phẩm</th>
                <th style="width: 15%;" class="text-end">Đơn giá</th>
                <th style="width: 15%;">Danh mục</th>
                <th style="width: 25%;" class="text-center">Hành động</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        <img src="@Html.DisplayFor(modelItem => item.ProductImage)" alt="@item.ProductName" class="product-thumb-admin" />
                    </td>
                    <td>
                        <strong class="text-primary">@Html.DisplayFor(modelItem => item.ProductName)</strong>
                    </td>
                    <td class="text-end fw-bold text-danger">
                        @item.ProductPrice.ToString("N0") ₫
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Category.CategoryName)
                    </td>
                    <td class="text-center">
                        @Html.ActionLink("Sửa", "Edit", new { id = item.ProductID }, new { @class = "btn btn-warning btn-sm me-2" })
                        @Html.ActionLink("Chi tiết", "Details", new { id = item.ProductID }, new { @class = "btn btn-info btn-sm me-2" })
                        @Html.ActionLink("Xóa", "Delete", new { id = item.ProductID }, new { @class = "btn btn-info btn-sm me-2" })
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <div class="alert alert-warning text-center mt-3">
        Không tìm thấy sản phẩm nào phù hợp với bộ lọc.
    </div>
}

