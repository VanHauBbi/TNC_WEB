@model WebBanHang.Models.Order

@{
    ViewBag.Title = "Xử lý Đơn hàng: " + "tnc_bee" + Model.OrderID + "tncbee";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<link href="~/Content/Admin/order_admin.css" rel="stylesheet" />

<div class="row">
    <div class="col-md-8">
        <div class="order-detail-card shadow-sm">
            <h4 class="detail-section-title">Thông tin Giao dịch</h4>

            @* Hiển thị chi tiết đơn hàng (giống Details.cshtml) *@
            @Html.Partial("_OrderDetailsPartial", Model)

            <h4 class="detail-section-title mt-4">Trạng thái hiện tại: <span class="text-primary">@Model.OrderStatus</span></h4>
        </div>
    </div>

    <div class="col-md-4">
        <div class="card shadow-sm p-4 border-primary">
            <h5 class="text-primary mb-3">Thao tác Xử lý Đơn hàng</h5>

            @* Dùng chung Action POST Process, chỉ khác actionType *@
            @using (Html.BeginForm("Process", "Orders", new { id = Model.OrderID }, FormMethod.Post))
            {
                @Html.AntiForgeryToken()

                <p class="text-muted">Chọn hành động cho đơn hàng này:</p>

                <button type="submit" name="actionType" value="Approve" class="btn btn-success btn-lg w-100 mb-3"
                        onclick="return confirm('Xác nhận DUYỆT đơn hàng #@Model.OrderID? Đơn hàng sẽ chuyển sang trạng thái Đã duyệt.')">
                    <i class="fa-solid fa-check"></i> DUYỆT ĐƠN HÀNG
                </button>

                <button type="submit" name="actionType" value="Cancel" class="btn btn-danger btn-lg w-100"
                        onclick="return confirm('Xác nhận HỦY đơn hàng #@Model.OrderID? Khách hàng sẽ nhận được thông báo.')">
                    <i class="fa-solid fa-times"></i> HỦY ĐƠN HÀNG
                </button>
            }
            <hr />
            @using (Html.BeginForm("Delete", "Orders", new { id = Model.OrderID }, FormMethod.Post, new { @class = "mt-3" }))
            {
                @Html.AntiForgeryToken()
                <p class="text-danger">Thao tác này sẽ xóa vĩnh viễn đơn hàng khỏi cơ sở dữ liệu.</p>
                <button type="submit" class="btn btn-danger btn-sm w-100"
                        onclick="return confirm('CẢNH BÁO: Xác nhận XÓA VĨNH VIỄN đơn hàng #@Model.OrderID và tất cả chi tiết liên quan?');">
                    <i class="fa-solid fa-trash-alt"></i> XÓA VĨNH VIỄN
                </button>
            }
        </div>

        <a href="@Url.Action("Index", "Orders")" class="btn btn-secondary w-100 mt-3">Quay lại danh sách</a>
    </div>
</div>