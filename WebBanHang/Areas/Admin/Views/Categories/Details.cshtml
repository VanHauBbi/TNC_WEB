@model WebBanHang.Models.Category

@{
    ViewBag.Title = "Chi tiết Danh Mục";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<link href="~/Content/Admin/categories_admin.css" rel="stylesheet" />

<h2 class="admin-content-title">THÔNG TIN CHI TIẾT DANH MỤC</h2>

<div class="category-details-container">
    <dl class="dl-horizontal">
        <dt>Tên danh mục</dt>
        <dd>@Html.DisplayFor(model => model.CategoryName)</dd>

        <dt>Mã danh mục</dt>
        <dd>@Html.DisplayFor(model => model.CategoryID)</dd>
    </dl>
</div>

<p class="mt-4">
    @Html.ActionLink("Cập nhật", "Edit", new { id = Model.CategoryID }, new { @class = "btn btn-warning btn-sm" })
    @Html.ActionLink("Quay lại danh sách", "Index", null, new { @class = "btn btn-secondary btn-sm ms-2" })
</p>